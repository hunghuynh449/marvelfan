<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="icon" sizes="200x200" href="images/webLogo.png">
    <!-- ionicons link -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    
    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- css file link -->
    <link rel="stylesheet" href="stylesheets/admin.css">
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <!-- sidebar starts -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <img src="images/webLogo.png" width="40px" height="45px" alt="">
            <h1>
                <span>MarvelFan</span>
            </h1>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <!-- add active to a element -->
                    <a href="/admin" class="active"><span><ion-icon name="copy-outline"></ion-icon></span>
                    <span>Loại sản phẩm</span></a>
                </li>
                <li>
                    <a href="/admin/products"><span><ion-icon name="book-outline"></ion-icon></span>
                    <span>Sản phẩm</span></a>
                </li>
                <li>
                    <a href="#"><span><ion-icon name="people-outline"></ion-icon></span>
                    <span>Khách hàng</span></a>
                </li>
                <li>
                    <a href="#"><span><ion-icon name="stats-chart-outline"></ion-icon></span>
                    <span>Thống kê</span></a>
                </li>
            </ul>
        </div>
    </div>
    <!-- sidebar ends -->

    <!-- main starts -->
    <div class="main-content">
        <header>
            <h1>
                <label for="nav-toggle">
                    <span class="fas fa-bars"></span>
                </label>
                Dashboard
            </h1>
            <div class="search-wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Tìm kiếm">
            </div>
            <div class="user-wrapper">
                <img src="images/tiger.jpg" alt="">
                <div>
                    <h4>Huỳnh Quốc Hưng</h4>
                    <small>Admin</small>
                </div>
            </div>
        </header>

        <main>
            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1>54</h1>
                        <span>Người dùng</span>
                    </div>
                    <div>
                        <span class="fas fa-users"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>3</h1>
                        <span>Loại sản phẩm</span>
                    </div>
                    <div>
                        <span class="fas fa-users"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>9</h1>
                        <span>Sản phẩm</span>
                    </div>
                    <div>
                        <span class="fas fa-users"></span>
                    </div>
                </div>
                <div class="card-single">
                    <div>
                        <h1>200</h1>
                        <span>Lượt mua</span>
                    </div>
                    <div>
                        <span class="fas fa-users"></span>
                    </div>
                </div>
            </div>

            <div class="recent-grid">
                <div class="category">
                    <div class="card">
                        <div class="card-header">
                            <h2>Loại sản phẩm</h2>
                        </div>
                        <div class="card-body">
                            <table>
                                <thead>
                                    <tr>
                                        <td>ID Loại</td>
                                        <td>Tên loại</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody id="listCategory">
                                    <!-- <tr>
                                        <td>1</td>
                                        <td>Lịch sử</td>
                                        <td>
                                            <button class="btnEdit"><a href="">Sửa</a></button>
                                            <button class="btnDelete"><a href="">Xóa</a></button>
                                        </td>
                                    </tr> -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="add-category">
                    <div class="card">
                        <div class="card-header">
                            <h3>Thêm loại sản phẩm</h3>
                        </div>
                        <div class="card-body">
                            <input id="nameCategory" type="text" value="" placeholder="Nhập tên loại">
                            <button class="btnAdd">Thêm</button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <!-- main ends -->

    <div class="modal">
        <i class="fas fa-times"></i>
        <div class="edit-category">
            <div class="card">
                <div class="card-header">
                    <h3>Sửa loại sản phẩm</h3>
                </div>
                <div class="card-body">
                    <input id="nameCategoryEdit" name="nameEdit" type="text" value="" placeholder="Nhập tên loại">
                    <button class="btnUpdate">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <script src="javascripts/checkLogin.js"></script>
    <script src="javascripts/baseAPI.js"></script>
    <script src="javascripts/categoryService.js"></script>
    <script src="javascripts/productsService.js"></script>
    <script src="javascripts/category.js"></script>

</body>
</html>